  <script>
    function abrirModal(produto, preco) {
      document.getElementById("modalProduto").innerText = produto;
      document.getElementById("modalPreco").innerText = "Preço: R$ " + preco;
      const mensagem = encodeURIComponent(`Olá! Tenho interesse em comprar o produto: ${produto} por R$ ${preco}`);
      document.getElementById("btnComprar").href = `https://wa.me/5511984071037?text=${mensagem}`;
      document.getElementById("modalCompra").style.display = "flex";
    }

    function fecharModal() {
      document.getElementById("modalCompra").style.display = "none";
    }
  </script>

